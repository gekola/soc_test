<%= render :partial => 'question_header', :locals =>
           { :question => @question } %>
<%= render :partial => 'question_links', :locals =>
           { :question => @question, :links_type => "edit&delete" } %>
<dl>
  <% @question.answers.each do |answer| %>
    <%= render :partial => 'answers/answer', :locals =>
               { :answer => answer, :links_type => "with" } %>
  <% end %>
</dl>
<%= link_to 'create a new answer',new_answer_path(:question_id => @question), :class => 'actions' %> <br /> <br />
<%= link_to 'back to questionary',questionary_path(@question.questionary), :class => 'actions' %>
