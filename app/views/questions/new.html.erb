<h1> Creating a new question for questionary</h1>
<%= form_for(@question) do |form| %>
  <%= render 'shared/object_error_messages', :object => form.object %>
  <div class="field">
    <%= form.label :num %>
    <%= form.text_field :num, :value => (@questionary.questions.count+1).to_s %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="field">
    <%= form.label :extra_answer %>
    <%= form.check_box :extra_answer %>
  </div>
  <div class="field">
    <%= form.label :multians %> 
    <%= form.number_field :multians,  {:value => 1} %>
  </div>
  <div class="field">
    <%= form.label :questionary %>
    <%= collection_select :questionary, :id ,Questionary.all, :id, :name %>
  </div>
  <div class="actions">
    <%= form.submit "Create" %>
  </div>  
<% end %>
