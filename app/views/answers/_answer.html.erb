<dd>
  <%= answer.num %>) <%= answer.content%>
  <% if links_type=="with" && authorized? %>
    <%= link_to 'edit',edit_answer_path(answer), :class => "actions" %>
    <%= link_to 'delete', answer, :method => :delete, 
                :confirm => "Delete answer #{answer.num}) #{answer.content}\nAre you sure?", :class => "actions" %>
  <% end %>
</dd>
